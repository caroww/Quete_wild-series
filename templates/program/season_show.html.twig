{% extends 'base.html.twig' %}
{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
  <div class="media">
    <div class="media-body">
        <h1>{{ program.title }} - Season {{ seasons.number }}<h1>
            <p>{{ seasons.description }}</p>

  {% for episode in episodes %}
      <div>
        <a href="{{ path("program_episode_show", { slug: program.slug, seasonId: seasons.id, episodeId: episode.id }) }}"><h2> {{ episode.number }} - {{ episode.title }}</h2></a>
      </div>
        {% else %}
        <p>No season to display</p>
      {% endfor %}

    </div>
  </div>

<a href="{{ path('program_index') }}">
    Retour à la liste des programmes
</a>

{% endblock %}
   

